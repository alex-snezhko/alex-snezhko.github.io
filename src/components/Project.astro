---
import type { TagInfo } from '../utils/skills';
import Tag from './Tag.astro';

interface Props {
  projectName: string;
  projectUrl: string;
  imgSrc: string;
  body: string;
  techUsed: TagInfo[];
  techHeight?: string;
}

const { projectName, projectUrl, imgSrc, body, techUsed, techHeight } = Astro.props;
---
<style lang="scss">
  @use "sass:color";

  .project {
    padding: 35px;
    border-radius: 20px;
    height: 100%;
    margin: auto;
    background-color: var(--container-color);
    border: 1px solid var(--container-border-color);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .project-link:hover .project-image {
    height: 90%;
  }

  .project-image-container {
    height: 160px;
    position: relative;
    border-radius: 10px;
    margin-bottom: 15px;
    transition: 0.5s;
  }

  .project-image {
    height: 80%;
    object-fit: contain;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: 0.5s;
  }

  .project-name {
    font-size: 1.75rem;
  }

  .project-tech {
    // background-color: hsl(210, 15%, 95%);
    // background-color: #edd2c7;
    // background-color: #c6e7f0;
    // background-color: hsl(184, 45%, 87%);
    // border-top: 1px solid var(--container-border-color);
    margin: -35px;
    margin-top: 0;
    padding: 20px 35px;
    align-items: center;
    justify-content: center;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
  }

  .tech-used {
    list-style: none;
    flex-wrap: wrap;
    display: flex;
    gap: 10px;
  }

  :root.dark-mode .project-tech {
    background-color: var(--container-color);
    // background-color: hsl(210, 1%, 27%);
  }

  $darkProjectColor: #46b4b8;
  :root.dark-mode .project-name {
    color: $darkProjectColor;
    transition: 0.5s;
  }

  :root.dark-mode .project-link:hover .project-name {
    color: color.adjust($darkProjectColor, $lightness: -10%);
  }
</style>

<div class="project">
  <div>
    <a class="project-link" href={projectUrl} target="_blank">
      <div class="project-image-container">
        <img class="project-image" src={imgSrc} alt={projectName} />
      </div>
      <h2 class="project-name">{projectName}</h2>
    </a>
    <p>{body}</p>
  </div>
  <div>
    <ul style={{ height: techHeight }} class="project-tech tech-used">
      {techUsed.map(tech => <Tag {...tech} />)}
    </ul>
  </div>
</div>
